<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.adavi.academiccompanion.EditTimeTable"
    android:background="#FFFFFF">


    <LinearLayout
        android:id="@+id/edit_timetable_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/edit_subs_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sub |"
                android:textStyle="bold"
                android:textSize="20sp"
                android:paddingTop="8dp"
                android:gravity="center"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/edit_monday_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mon"
                android:textSize="20sp"
                android:textColor="#000000"
                android:paddingTop="8dp"
                android:gravity="center"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/edit_tuesday_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tue"
                android:textSize="20sp"
                android:textColor="#000000"
                android:paddingTop="8dp"
                android:gravity="center"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/edit_wednesday_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Wed"
                android:textColor="#000000"
                android:textSize="20sp"
                android:paddingTop="8dp"
                android:gravity="center"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/edit_thursday_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thu"
                android:textSize="20sp"
                android:textColor="#000000"
                android:paddingTop="8dp"
                android:gravity="center"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/edit_friday_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fri"
                android:textSize="20sp"
                android:textColor="#000000"
                android:paddingTop="8dp"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/edit_saturday_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sat"
                android:textSize="20sp"
                android:textColor="#000000"
                android:paddingTop="8dp"
                android:gravity="center"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/edit_sunday_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sun"
                android:textSize="20sp"
                android:textColor="#000000"
                android:paddingTop="8dp"
                android:gravity="center"
                />
        </LinearLayout>


    </LinearLayout>

</ScrollView>
