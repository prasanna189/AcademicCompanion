<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.adavi.academiccompanion.View_Stats"
    android:layout_weight="1">

    <LinearLayout
        android:id="@+id/stats_Linear_Layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        >


            <Button
                android:id="@+id/subject_button"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Marks"
                android:gravity="center"
                android:layout_marginTop="30dp"
                android:onClick="subjects"
                android:background="@drawable/button_sample1"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                />

            <Button
                android:id="@+id/results_button"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Results"
                android:gravity="center"
                android:layout_marginTop="30dp"
                android:onClick="results"
                android:background="@drawable/button_sample1"
                android:textColor="#FFFFFF"
                android:textStyle="bold"

                />

            <Button
                android:id="@+id/attendance_button"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Attendance"
                android:layout_marginTop="30dp"
                android:onClick="attendance"
                android:background="@drawable/button_sample1"
                android:textColor="#FFFFFF"
                android:textStyle="bold"

            />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
