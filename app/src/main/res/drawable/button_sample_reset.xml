<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#B2DFDB"
                android:endColor="#B2DFDB"
                android:angle="180"
                />
            <stroke
                android:width="1dp"
                android:color="#F57C00" />
            <corners
                android:radius="1dp" />

        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#FFD54F"
                android:endColor="#FF6F00"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#2f6699" />
            <corners
                android:radius="1dp" />

        </shape>
    </item>
</selector>