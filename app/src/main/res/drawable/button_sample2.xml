<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#FF8A65"
                android:endColor="#FF5722"
                android:angle="180"
                />
            <stroke
                android:width="1dp"
                android:color="#00E5FF" />
            <corners
                android:radius="1dp" />

        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#80DEEA"
                android:endColor="#26A69A"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#2f6699" />
            <corners
                android:radius="1dp" />

        </shape>
    </item>
</selector>